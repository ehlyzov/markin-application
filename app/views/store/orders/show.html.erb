<h1>
  Order #<%= current_order.public_id %>
</h1>

<div class="page-header">
  <h3>Items</h3>
</div>


<table class='table'>
  <thead>
    <tr>
      <th>Product</th>
      <th>Count</th>
      <th>Size</th>
      <th>Amount</th>
    </tr>
  </thead>
  <tbody>
    <% current_order.items.each do |item| %>
      <tr>
        <td>
          <div class="media">
            <%= link_to [:store, item.product], target: '_blank', class: 'pull-left' do %>
              <%= image_tag uploadcare_url(item.product.poster, scale_crop: '35x35/center') %>
            <% end %>
            
            <div class="media-body">
              <h5 class="media-heading">
                <%= link_to [:store, item.product], target: '_blank' do %>
                  <%= item.product.batch.name %>
                  “<%= item.product.name %>”
                <% end %>
              </h5>
              <%= item.product.options_description %>
            </div>
          </div>
        </td>
        <td>
          <%= item.amount %>
        </td>
        <td>
          <%= item.size %>
        </td>
        <td>
          <%= number_to_currency item.total %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<dl>
  <dt>Total:</dt>
  <dd><%= number_to_currency current_order.total %></dd>
</dl>


<div class="page-header"><h3>Shipping Info</h3></div>

<dl>
  
  <dt>
    Country:
  </dt>
  <dd>
    <% if current_order.country.present? %>
      <%= current_order.country.name %>
    <% end %>
  </dd>

  <% %w(
    shipping_address_line1
    shipping_address_line2
    shipping_city
    shipping_state
    shipping_zip
    phone_number
  ).each do |attr| %>
    <dt>
      <%= Order.human_attribute_name(attr) %>:
    </dt>
    <dd>
      <%= current_order.send(attr) %>
    </dd>
  <% end %>
</dl>

<br>

<p>
  <%= link_to raw('&larr; Back to store'), root_url, class: 'btn btn-default' %>
  <%= link_to 'Edit Order', edit_store_order_path, class: 'btn btn-default', data: {label: 'store-order-edit'} %>
  <%= link_to 'Cancel Order', store_order_path,
    class: 'btn btn-danger',
      data: {
        confirm: 'Confirm',
        label: 'store-order-delete'
      },
    method: 'delete'
  %>
  <% if current_order.valid? and current_order.ready_to_checkout? %>
    <%= link_to 'Checkout', new_store_order_payment_path, class: 'btn btn-success', id: 'store-order-checkout' %>
  <% end %>
</p>