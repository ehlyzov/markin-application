<lib-layout-cell width="24" class="lib-contentBlock-padding">
<h1><%= t('.catalogue') %></h1>
<h2><%= t('.collections') %></h2>
</lib-layout-cell>

<lib-layout hcenter>
  <lib-layout-cell width="20">
    <lib-layout>
      <% collection.each do |batch| %>
        <lib-layout-cell width="6" class="lib-media">
          <figure>
            <%= link_to image_tag(uploadcare_url(batch.poster, scale_crop: '650x390/center')), store_batch_path(batch) %>
          </figure>
          <h3>
            <%= link_to batch.name.value, store_batch_path(batch) %>
          </h3>
        </lib-layout-cell>
        
      <% end %>
    </lib-layout>
  </lib-layout-cell>
</lib-layout>
