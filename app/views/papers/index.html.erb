<lib-layout-cell width="24" class="lib-contentBlock-padding">
<h1><%= t('.news') %></h1>
</lib-layout-cell>

<lib-layout hcenter>
  <lib-layout-cell width="20">
    <lib-layout>
      <% collection.each do |paper| %>

        <lib-layout-cell width="6" class="lib-media">
          <figure>
            <%= link_to image_tag(uploadcare_url(paper.poster, scale_crop: '650x919/center')), paper %>
          </figure>
          <h3>
            <%= link_to paper do %>
              <%= paper.title.value %>
            <% end %>
          </h3>
          <p class="lib-textStyle-caption lib-paragraph-center">
            <%= I18n.l paper.published_at.to_date, format: :long %>
          </p>
        </lib-layout-cell>

      <% end %>
    </lib-layout>
  </lib-layout-cell>
</lib-layout>
