<% content_for :main_content do %>
  <lib-layout class="lib-boxStyle-gold">
    <%= link_to current_user.name, users_profile_path,
      is: 'lib-layout-acell', width: 6,
      class: expand_class('lib', buttons: 'small gold') %>
    <%= link_to t('.sign_out'), destroy_user_session_path,
      is: 'lib-layout-acell',
      width: 2,
      height: 1,
      gap: 16,
      method: 'delete',
      class: expand_class('lib', buttons: 'small blackBorder'),
      id: 'sessionSignOut' %>
  </lib-layout>
  <%= yield %>
<% end %>

<%= render template: 'layouts/application' %>