<lib-source
  url="<%= api_content_holders_path(page_type: page.class.name, page_id: page.id, format: 'json') %>"
  receiver="pageContentBlocks">
</lib-source>

<lib-layout-cell width="20">
  <lib-layout>
    <template id="pageContentBlocks" is="auto-binding" repeat="{{source}}">
      <fp-contentblock
        content="{{content}}"
        blockstyle="{{block_style}}"
        order="{{order_number}}"
        width="{{width}}"
        height="{{height}}"
        padding?="{{padding}}"
        imagestyle="{{image_style}}"
        fontstyle="{{font_style}}"
        borderstyle="{{border_style}}"
        backgroundstyle="{{background_style}}">
      </fp-contentblock>
    </template>
  </lib-layout>
</lib-layout-cell>
