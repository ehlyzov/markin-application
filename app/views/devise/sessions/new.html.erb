<lib-layout class="lib-boxStyle-gold">
  <lib-layout-cell width="12" gap="6" class="lib-contentBlock-padding">
    <%= simple_form_for resource,
      as: resource_name, url: session_path(resource_name),
      html: {class: expand_class('lib', form: 'gold large')} do |f| %>
        <fieldset>
          <legend><%= t('.welcome') %></legend>
          <lib-layout>
            <lib-layout-cell width="5">
              <%= f.input :email, required: false, autofocus: true, label: false %>
            </lib-layout-cell>
            <lib-layout-cell width="5">
              <%= f.input :password, required: false, label: false %>
            </lib-layout-cell>
            <lib-layout-cell class="form-actions" width="2" height="1">
              <%= f.button :submit, t('.login'), class: 'lib-buttons-small lib-buttons-black' %>
            </lib-layout-cell>
          </lib-layout>
        </fieldset>
    <% end %>
    <%= render "devise/shared/links" %>
  </lib-layout-cell>
</lib-layout>

<% if page = Page.where(slug: 'client-care').first %>
  <%= render 'lib/page', page: page %>
<% end %>
