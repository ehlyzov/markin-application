<section class="lib-boxStyle-gold lib-layout">
  <div class="lib-layout-cell-14 lib-layout-gap-5 lib-contentBlock-padding">

    <%= simple_form_for resource,
      as: resource_name, url: session_path(resource_name),
      html: {class: expand_class('lib', form: 'gold large')} do |f| %>
        <fieldset>
          <legend><%= t('.welcome') %></legend>
          <div class="lib-layout">
            <%= f.input :email, required: false,
              autofocus: true, label: false,
              wrapper_html: {class: 'lib-layout-cell-5'} %>
            <%= f.input :password, required: false, label: false,
              wrapper_html: {class: 'lib-layout-cell-5'} %>
            <div class="form-actions">
              <%= f.button :submit, t('.login'),
                class: expand_class('lib', layout: 'row-1 cell-2', buttons: 'small black') %>
            </div>
          </div>
        </fieldset>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>

</section>

<%= render 'lib/page', page: Page.where(slug: 'client-care').first! %>