<lib-layout class="lib-boxStyle-gold" hcenter>
  <lib-layout-cell width="12" class="lib-contentBlock-padding">
    <%= simple_form_for resource,
      as: resource_name, url: password_path(resource_name),
      html: {class: expand_class('lib', form: 'gold large'), method: :post} do |f| %>
        <fieldset>
          <legend><%= t('.welcome') %></legend>
          <lib-layout>
            <lib-layout-cell width="9">
              <%= f.input :email, required: false, autofocus: true, label: false %>
            </lib-layout-cell>
            <lib-layout-cell width="3" class="form-actions">
              <%= f.button :submit, t('.commit'),
                class: expand_class('lib', buttons: 'small black') %>
            </lib-layout-cell>
          </lib-layout>
        </fieldset>
    <% end %>
    <%= render "devise/shared/links" %>
  </lib-layout-cell>
</lib-layout>
