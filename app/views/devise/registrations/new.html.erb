<section class="lib-boxStyle-gold lib-layout">
  <div class="lib-layout-cell-14 lib-layout-gap-5 lib-contentBlock-padding">

    <%= simple_form_for resource,
      as: resource_name, url: registration_path(resource_name),
      html: {class: expand_class('lib', form: 'gold large')} do |f| %>

        <fieldset>
          <legend><%= t('.welcome') %></legend>
          <%= f.input :email, autofocus: true, placeholder: false %>
          <%= f.input :name %>
          <%= f.input :password, placeholder: false %>
          <%= f.input :password_confirmation %>
          <div class="form-actions">
            <%= f.button :submit, t('.commit'), class: expand_class('lib', buttons: 'small black') %>
          </div>
        </fieldset>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>

</section>
