<div class="row">
  <div class="col-md-6">
    <%= form.input :name %>
    <%= form.input :poster, as: :uploadcare %>
    <%= form.input :price %>
    <%= form.association :batch, include_blank: false %>

    <% Product::Characteristic.all.each_slice(2) do |group| %>
      <div class="row">
        <% group.each do |c| %>
          <fieldset class="col-md-6 col-sm-6 col-xs-6">
            <legend><%= c.name %></legend>
            <%= form.input :option_ids,
              collection: c.options, as: :check_boxes,
              wrapper: :vertical_radio_and_checkboxes,
              label: false %>
          </fieldset>
        <% end %>

      </div>

    <% end %>
  </div>
</div>
